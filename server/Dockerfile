# Используем официальный образ Node.js как базовый образ
FROM node:14

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /usr/src/app

# Копируем package.json и package-lock.json (если есть) для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все файлы из текущей директории в контейнер
COPY . .

# Экспортируем порт, на котором будет работать сервер
EXPOSE 5000

# Запускаем сервер при старте контейнера
CMD ["npm", "start"]